<!-- form to create a new pairing - for mentors only -->

<ul>
  <li><%= pairing.mentor.name %></li>
  <li> <%= pairing.mentor.average(pairing.mentor.feedbacks) %> </li>
  <li>Phase: <%= pairing.mentor.phase %></li>
  <li><%= pairing.start_time %></li>
  <li><%= pairing.mentor.email %></li>  <!-- link to email -->

  <% if !mentor %>
    <%= link_to 'Join this mentor', edit_pairing_path(pairing) %>
  <% end %>
</ul>
